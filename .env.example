# Clerk Authentication (Required)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Clerk URLs (Optional - defaults work fine)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# API Keys (Development Only - NEVER commit real keys!)
# These keys are ONLY used in localhost development mode
# Users must provide their own keys in production
# Get your keys from:
# - Google Gemini: https://makersuite.google.com/app/apikey
# - Cartesia: https://www.cartesia.ai/
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here
CARTESIA_API_KEY=your_cartesia_api_key_here

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_DEBUG=false